@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Html.Sitecore().Field("title", new { DisableWebEdit = true })</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/styles.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/iehp.js"></script>

    @Html.Sitecore().VisitorIdentification()
</head>
<body>
    <div class="container-fluid">
        <div class="col-14 mx-auto">
            @Html.Sitecore().Placeholder("navCtrl")
        </div>
    </div>

    <div class="container-fluid">
        <div class="col-14 mx-auto row itemSep justify-content-between">
            <div class="col-24 allPadding row">
                <div id="searchHeaderWrapper" class="col-24 row">
                    <div class="col-12 allPadding">
                        <h3 class="resultsHeader">Search Results:</h3>
                        <div id="paginationHelper"></div>
                    </div>

                    <div class="col-12 align-bottom allPadding justify-content-end">
                        <div id="paginationWrapper"></div>
                    </div>
                </div>

                <div id="resultsWrapper" class="col-24 topPadding">
                    <div id="results"></div>
                    <div id="loading"></div>
                </div>
            </div>
        </div>
    </div>


    <div id="footer" class="container-fluid">
        <div id="footerLinks" class="col-14 mx-auto row">
            @Html.Sitecore().Placeholder("footerLinks")
        </div>
    </div>

    <div id="extraFooter" class="container-fluid">
        <div class="col-14 mx-auto row topPadding text-center">
            @Html.Sitecore().Placeholder("extraFooterLinks")
        </div>
    </div>



    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>