@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Html.Sitecore().Field("title", new { DisableWebEdit = true })</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/styles.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/iehp.js"></script>

    @Html.Sitecore().VisitorIdentification()
</head>
<body>
    <div class="container-fluid">
        <div class="col-14 mx-auto">
            @Html.Sitecore().Placeholder("navCtrl")
        </div>
    </div>

    <div id="imageSlider" class="row">
        @Html.Sitecore().Placeholder("imageSlider")
    </div>

    <div class="container-fluid">
        <div id="mainTabsNav" class="col-14 mx-auto">
            <ul class="nav nav-tabs nav-fill">
                <li class="nav-item">
                    <a id="doctorTab" class="mainTab nav-link active" href="#" data-toggle="tab"><i class="fas fa-stethoscope"></i> Doctor</a>
                </li>
                <li class="nav-item">
                    <a id="urgentTab" class="mainTab nav-link" href="#" data-toggle="tab"><i class="fa fa-ambulance"></i> Urgent Care</a>
                </li>
                <li class="nav-item">
                    <a id="pharmacyTab" class="mainTab nav-link" href="#" data-toggle="tab"><i class="fa fa-medkit"></i> Pharmacy</a>
                </li>
            </ul>

            <div class="tab-content clearfix">
                <div class="tab-pane active" id="doc">
                    <div id="docTab" class="tabWrapper row">
                        <!--Tab Content Goes Here-->
                    </div>
                </div>

                <div class="tab-pane" id="urg">
                    <div id="ucTab" class="tabWrapper row">
                        <!--Tab Content Goes Here-->
                    </div>
                </div>

                <div class="tab-pane" id="pharm">
                    <div id="pharmTab" class="tabWrapper row">
                        <!--Tab Content Goes Here-->
                    </div>
                </div>
            </div>

            <div id="plansWrapper" class="row justify-content-between">
                <div class="col-12 backColor largePadding">
                    @Html.Sitecore().Placeholder("mediPlan")
                </div>

                <div class="col-11 backColor largePadding">
                    @Html.Sitecore().Placeholder("dualChoicePlan")
                </div>
            </div>

        </div>
    </div>

    <div id="footer" class="container-fluid">
        <div id="footerLinks" class="col-14 mx-auto row">
            @Html.Sitecore().Placeholder("footerLinks")
        </div>
    </div>

    <div id="extraFooter" class="container-fluid">
        <div class="col-14 mx-auto row topPadding text-center">
            @Html.Sitecore().Placeholder("extraFooterLinks")
        </div>
    </div>



    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>