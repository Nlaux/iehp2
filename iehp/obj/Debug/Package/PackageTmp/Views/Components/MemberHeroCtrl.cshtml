@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Mvc
@using Sitecore.Resources.Media
@model iehp.MemberHero.Models.MemberHeroCtrlModel


@{ 
    Item item = Sitecore.Context.Item;
    ImageField imgField = ((ImageField)item.Fields["Image"]);
}


<div id="memberHeroContent" class="col-24 row align-items-center" style="background:url(@MediaManager.GetMediaUrl(imgField.MediaItem)) 0 center / 100% no-repeat">
    <div class="col-6 offset-md-5">
        <h1>@Html.Sitecore().Field("Slide Header")</h1>
        <p>@Html.Sitecore().Field("Slide Text")</p>
    </div>
</div>
